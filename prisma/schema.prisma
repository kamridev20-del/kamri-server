  // ‚úÖ NOUVEAU : Statut d'importation pour la solution hybride
  importStatus      String  @default("not_imported") // not_imported, imported_draft, imported_published
  importedProductId String? // ID du produit dans la table Product (si import√©)

  // üîß AJOUTER TOUS LES CHAMPS D√âTAILL√âS
  productSku       String?
  productWeight    String?
  packingWeight    String?
  productType      String?
  productUnit      String?
  productKeyEn     String? @db.Text
  materialNameEn   String?
  packingNameEn    String?
  suggestSellPrice String?
  listedNum        Int?
  supplierName     String?
  supplierId       String? // ‚úÖ ID fournisseur CJ
  createrTime      String?
  variants         String? @db.Text // JSON string
  reviews          String? @db.Text // JSON string
  dimensions       String?
  brand            String?
  tags             String? @db.Text // JSON string

  // ‚úÖ Champs douaniers (essentiels pour l'export)
  categoryId  String? // ID cat√©gorie CJ
  entryCode   String? // HS code (code douanier)
  entryName   String? @db.Text // Nom douanier (chinois)
  entryNameEn String? @db.Text // Nom douanier (anglais)

  // ‚úÖ Mat√©riau/Emballage complets
  materialName String? @db.Text // Nom mat√©riau (chinois)
  materialKey  String? @db.Text // Attributs mat√©riau
  packingName  String? @db.Text // Nom emballage (chinois)
  packingKey   String? @db.Text // Attributs emballage

  // ‚úÖ Attributs produit complets
  productKey      String? @db.Text // Attributs produit (chinois)
  productProSet   String? @db.Text // Attributs logistiques (chinois) - JSON array
  productProEnSet String? @db.Text // Attributs logistiques (anglais) - JSON array

  // ‚úÖ Personnalisation (POD)
  customizationVersion Int? // Version personnalisation (0=non-POD, 1-5=POD)
  customizationJson1   String? @db.Text // JSON personnalisation 1
  customizationJson2   String? @db.Text // JSON personnalisation 2
  customizationJson3   String? @db.Text // JSON personnalisation 3
  customizationJson4   String? @db.Text // JSON personnalisation 4

  // ‚úÖ M√©dia
  productVideo String? @db.Text // JSON array des IDs vid√©o (si features=enable_video)

  // ‚úÖ Informations de livraison
  deliveryCycle         String? // D√©lai de livraison (ex: "7-15 days")
  isFreeShipping        Boolean? // Livraison gratuite disponible
  freeShippingCountries String? @db.Text // JSON array des pays avec livraison gratuite
  defaultShippingMethod String? // M√©thode de livraison par d√©faut

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("cj_product_store")
  @@index([cjProductId])
  @@index([status])
  @@index([isFavorite])
}

// Mapping produits CJ
model CJProductMapping {
  id          String    @id @default(cuid())
  productId   String    @unique // ID produit KAMRI
  cjProductId String // PID CJ
  cjSku       String
  lastSyncAt  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([cjProductId])
  @@index([productId])
  @@map("cj_product_mappings")
}

// Mapping commandes CJ
model CJOrderMapping {
  id            String   @id @default(cuid())
  orderId       String   @unique // ID commande KAMRI
  cjOrderId     String // CJ order ID
  cjOrderNumber String // orderNumber envoy√© √† CJ
  status        String // CREATED, PAID, SHIPPED, etc.
  trackNumber   String?
  metadata      String? @db.Text // JSON string avec montants d√©taill√©s et autres infos
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([cjOrderId])
  @@index([status])
  @@index([orderId])
  @@map("cj_order_mappings")
}

// Logs webhooks CJ am√©lior√©s
model WebhookLog {
  id               String    @id @default(cuid())
  messageId        String    @unique
  type             String // PRODUCT, VARIANT, STOCK, ORDER, LOGISTIC, etc.
  payload          String    @db.Text // JSON string du payload original
  status           String    @default("RECEIVED") // RECEIVED, PROCESSED, ERROR
  result           String?   @db.Text // JSON string du r√©sultat de traitement
  error            String?   @db.Text // Message d'erreur si √©chec
  processingTimeMs Int? // Temps de traitement en millisecondes
  receivedAt       DateTime  @default(now())
  processedAt      DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@index([type, status])
  @@index([receivedAt])
  @@index([messageId])
  @@map("webhook_logs")
}

// Garder l'ancien mod√®le pour compatibilit√© (√† supprimer plus tard)
model CJWebhookLog {
  id        String   @id @default(cuid())
  type      String // PRODUCT, STOCK, ORDER, LOGISTICS
  messageId String   @unique
  payload   String   @db.Text // JSON string
  processed Boolean  @default(false)
  error     String?  @db.Text
  createdAt DateTime @default(now())

  @@index([type, processed])
  @@index([messageId])
  @@map("cj_webhook_logs")
}

// Notifications de mise √† jour de produits via webhooks
model ProductUpdateNotification {
  id               String    @id @default(cuid())
  productId        String? // ID du produit KAMRI (peut √™tre null si produit non import√©)
  cjProductId      String // ID produit CJ (pid)
  cjVariantId      String? // ID variante CJ (vid) si c'est une variante
  webhookType      String // PRODUCT, VARIANT, STOCK, etc.
  webhookMessageId String // ID du message webhook
  changes          String?  @db.Text // JSON string des champs modifi√©s
  productName      String? // Nom du produit (pour affichage)
  isRead           Boolean   @default(false)
  createdAt        DateTime  @default(now())
  readAt           DateTime?

  @@index([isRead, createdAt])
  @@index([productId])
  @@index([cjProductId])
  @@map("product_update_notifications")
}

// ‚úÖ Mod√®le pour les demandes de sourcing CJ
model CJSourcingRequest {
  id String @id @default(cuid())

  // IDs de r√©f√©rence
  cjSourcingId String? @unique // ID CJ de la demande
  sourceNumber String? // Num√©ro court de recherche

  // IDs de votre syst√®me (optionnels)
  thirdProductId  String? // Votre product ID
  thirdVariantId  String? // Votre variant ID
  thirdProductSku String? // Votre SKU

  // Informations du produit demand√©
  productName  String // Nom du produit (requis)
  productImage String // URL de l'image (requis)
  productUrl   String? // URL du produit source (AliExpress, etc.)
  price        Float? // Prix actuel
  remark       String? @db.Text // Remarques (urgent, quantit√©, etc.)

  // Statut de la recherche
  status        String  @default("pending") // pending, processing, found, failed
  statusChinese String? // Statut en chinois (de l'API)

  // R√©sultat (si trouv√©)
  cjProductId       String? // Product ID CJ (quand trouv√©)
  cjVariantSku      String? // SKU du variant CJ (quand trouv√©)
  imported          Boolean @default(false) // Si d√©j√† import√©
  importedProductId String? // ID du produit import√© dans votre syst√®me

  // M√©tadonn√©es
  shopId   String? // ID de votre boutique
  shopName String? // Nom de votre boutique

  // Dates
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastCheckedAt DateTime? // Derni√®re v√©rification du statut
  foundAt       DateTime? // Date de d√©couverte du produit

  @@index([status])
  @@index([cjSourcingId])
  @@index([imported])
  @@map("cj_sourcing_requests")
}

// ‚úÖ Mod√®le pour stocker les recherches populaires
model SearchHistory {
  id        String   @id @default(cuid())
  query     String   // Terme de recherche
  count     Int      @default(1) // Nombre de fois recherch√©
  lastSearchedAt DateTime @default(now()) // Derni√®re recherche
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([query])
  @@index([count])
  @@index([lastSearchedAt])
  @@map("search_history")
}

// ‚úÖ Mod√®le pour stocker les taux de change
model ExchangeRate {
  id        String   @id @default(cuid())
  currency  String   @unique // Code devise (EUR, USD, XAF, XOF, CNY)
  rate      Float    // Taux de change depuis USD (ex: 1 USD = 0.92 EUR)
  updatedAt DateTime @default(now()) @updatedAt // Derni√®re mise √† jour

  @@index([currency])
  @@map("exchange_rates")
}

