# Base de données PostgreSQL Railway
# IMPORTANT: Ajoutez les paramètres de pool pour éviter "too many clients"
# Format: ?connection_limit=10&pool_timeout=20
# connection_limit: nombre max de connexions (recommandé: 10-20 pour Railway)
# pool_timeout: timeout en secondes (recommandé: 20)
DATABASE_URL="postgresql://postgres:PASSWORD@HOST:PORT/DATABASE?connection_limit=10&pool_timeout=20"

# Authentification JWT
JWT_SECRET="votre_secret_jwt_super_securise_au_moins_32_caracteres"

# Stripe (optionnel - pour les paiements)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# CJ Dropshipping (optionnel - pour l'intégration dropshipping)
CJ_EMAIL="votre@email.com"
CJ_API_KEY="votre_api_key_cj"
CJ_TIER="free"

# URLs (pour la production)
FRONTEND_URL="https://votre-app-web.vercel.app"
ADMIN_URL="https://votre-app-admin.vercel.app"
PORT=3001
NODE_ENV=production

